<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:paddingLeft="@dimen/_48sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year : "
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textSize="@dimen/_25sdp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/sem"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text=" 1"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/_22sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textAlignment="center"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester : "
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textSize="@dimen/_22sdp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/year"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:text=" 1"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/_22sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/subjectonename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject1 : "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/subjectonemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="92 "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/subjecttwoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject2 : "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/subjecttwomarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42 "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/subjectthreename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject3 : "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/subjectthreemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32 "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/subjectfourname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject4 : "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/subjectfourmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/subjectfivename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject5 : "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/subjectfivemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="62 "
                android:textSize="@dimen/_21sdp"
                android:padding="@dimen/_11sdp"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>

